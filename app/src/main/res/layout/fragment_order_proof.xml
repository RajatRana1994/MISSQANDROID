<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".code.auth.SplashFragment">


    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="fitXY"
        android:src="@drawable/screen_bg"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:fontFamily="@font/aceh"
        android:id="@+id/lblCategory"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_24sdp"
        android:layout_marginTop="@dimen/_24sdp"
        android:layout_marginEnd="@dimen/_24sdp"
        android:background="@drawable/round_trans_bg_lyt_orange_border"
        android:gravity="center"
        android:lineSpacingExtra="5dp"
        android:paddingVertical="@dimen/_8sdp"
        android:text="Service - Haircut"
        android:textColor="@color/black"
        android:textSize="@dimen/_12ssp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:fontFamily="@font/aceh"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/_14sdp"
        android:gravity="start"
        android:lineSpacingExtra="5dp"
        android:padding="@dimen/_8sdp"
        android:text="Haircut"
        android:visibility="gone"
        android:id="@+id/cetegoryName"
        android:textAllCaps="true"
        android:textColor="@color/blue"
        android:textSize="@dimen/_10ssp"
        app:layout_constraintBottom_toBottomOf="@id/lblCategory"
        app:layout_constraintEnd_toEndOf="@id/lblCategory"
        app:layout_constraintTop_toTopOf="@id/lblCategory" />


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:fillViewport="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/lblCategory">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:fontFamily="@font/aceh"
                android:id="@+id/lblProofService"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_24sdp"
                android:layout_marginTop="@dimen/_2sdp"
                android:textStyle="bold"
                android:layout_marginEnd="@dimen/_24sdp"
                android:gravity="center"
                android:lineSpacingExtra="5dp"
                android:padding="@dimen/_8sdp"
                android:text="@string/proof_of_service"
                android:textAllCaps="true"
                android:textColor="@color/black"
                android:textSize="@dimen/_13ssp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <com.makeramen.roundedimageview.RoundedImageView
                android:id="@+id/ivBefore"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_150sdp"
                android:layout_marginStart="@dimen/_32sdp"
                android:layout_marginEnd="@dimen/_32sdp"
                android:scaleType="centerCrop"
                android:src="@drawable/ic_wall"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/lblProofService"
                app:layout_constraintVertical_bias="0.38"
                app:riv_corner_radius="@dimen/_8sdp" />

            <TextView
                android:fontFamily="@font/aceh"
                android:id="@+id/tvBeforeUpload"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/_14sdp"
                android:gravity="center"
                android:lineSpacingExtra="5dp"
                android:layout_marginStart="@dimen/_4sdp"
                android:padding="@dimen/_8sdp"
                android:text="@string/upload_photos"
                android:drawableStart="@drawable/ic_camera"
                android:textColor="@color/blue"
                android:textSize="@dimen/_11ssp"
                android:drawablePadding="@dimen/_8sdp"
                app:layout_constraintStart_toStartOf="@id/ivBefore"
                app:layout_constraintTop_toBottomOf="@id/ivBefore" />


            <com.makeramen.roundedimageview.RoundedImageView
                android:id="@+id/ivAfter"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_150sdp"
                android:layout_marginStart="@dimen/_32sdp"
                android:layout_marginEnd="@dimen/_32sdp"
                android:scaleType="centerCrop"
                android:src="@drawable/ic_wall"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tvBeforeUpload"
                app:riv_corner_radius="@dimen/_8sdp" />

            <TextView
                android:fontFamily="@font/aceh"
                android:id="@+id/tvAfterUpload"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/_14sdp"
                android:gravity="center"
                android:lineSpacingExtra="5dp"
                android:padding="@dimen/_8sdp"
                android:text="@string/upload_photos"
                android:layout_marginStart="@dimen/_4sdp"
                android:drawableStart="@drawable/ic_camera"
                android:textColor="@color/blue"
                android:textSize="@dimen/_11ssp"
                android:drawablePadding="@dimen/_8sdp"
                app:layout_constraintStart_toStartOf="@id/ivAfter"
                app:layout_constraintTop_toBottomOf="@id/ivAfter" />

            <TextView
                android:fontFamily="@font/aceh"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAllCaps="true"
                android:textStyle="bold"
                android:gravity="start"
                android:lineSpacingExtra="5dp"
                android:padding="@dimen/_4sdp"
                android:layout_margin="@dimen/_5sdp"
                android:text="@string/before"
                android:textColor="@color/orange_btn"
                android:textSize="@dimen/_13ssp"
                app:layout_constraintStart_toStartOf="@+id/ivBefore"
                app:layout_constraintTop_toTopOf="@+id/ivBefore" />

            <TextView
                android:fontFamily="@font/aceh"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAllCaps="true"
                android:textStyle="bold"
                android:gravity="start"
                android:lineSpacingExtra="5dp"
                android:padding="@dimen/_4sdp"
                android:text="@string/after"
                android:layout_margin="@dimen/_5sdp"
                android:textColor="@color/orange_btn"
                android:textSize="@dimen/_13ssp"
                app:layout_constraintStart_toStartOf="@+id/ivAfter"
                app:layout_constraintTop_toTopOf="@+id/ivAfter" />

            <TextView
                android:fontFamily="@font/aceh"
                android:id="@+id/tvtagLine"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:lineSpacingExtra="5dp"
                android:letterSpacing="0.04"
                android:padding="@dimen/_4sdp"
                android:text="@string/add_some_photos_for_review_to_get_best_quotes"
                android:textColor="@color/black"
                android:textSize="@dimen/_9ssp"
                app:layout_constraintEnd_toEndOf="@id/ivAfter"
                app:layout_constraintStart_toStartOf="@id/ivAfter"
                app:layout_constraintTop_toBottomOf="@id/tvAfterUpload" />

            <TextView
                android:fontFamily="@font/aceh"
                android:id="@+id/btnComplete"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_10sdp"
                android:background="@drawable/round_bg"
                android:backgroundTint="@color/sky_blue"
                android:paddingStart="@dimen/_40sdp"
                android:paddingTop="@dimen/_10sdp"
                android:paddingEnd="@dimen/_40sdp"
                android:layout_marginStart="@dimen/_24sdp"
                android:layout_marginEnd="@dimen/_24sdp"
                android:paddingBottom="@dimen/_10sdp"
                android:text="@string/complete"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textSize="@dimen/_13ssp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="@+id/tvtagLine"
                app:layout_constraintStart_toStartOf="@+id/tvtagLine"
                app:layout_constraintTop_toBottomOf="@+id/tvtagLine" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>