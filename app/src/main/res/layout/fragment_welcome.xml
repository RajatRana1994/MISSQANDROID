<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/orange_bkgrd"
    android:fillViewport="true"
    android:orientation="vertical"
    tools:context=".code.auth.SplashFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView 
        android:fontFamily="@font/aceh"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/_50sdp"
            android:text="@string/welcome"
            android:textAllCaps="true"
            android:textColor="@color/black"
            android:textSize="@dimen/_16ssp" />

        <ImageView
            android:id="@+id/ivLogo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/_16sdp"
            android:scaleType="centerCrop"
            android:src="@drawable/app_logo" />

        <TextView 
        android:fontFamily="@font/aceh"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/_16sdp"
            android:text="Log In"
            android:textColor="@color/black"
            android:textSize="@dimen/_16ssp" />

        <com.facebook.login.widget.LoginButton
            android:id="@+id/loginButton"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:visibility="gone"
            android:layout_marginRight="30dp"
            android:scaleType="centerCrop"
            android:src="@drawable/fb_btn" />

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="80dp"
            android:layout_marginRight="30dp">

            <ImageView
                android:id="@+id/ivFb"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:layout_marginRight="30dp"
                android:visibility="gone"
                android:scaleType="centerCrop"
                android:src="@drawable/fb_btn" />

            <ImageView
                android:id="@+id/ivGmail"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:layout_toRightOf="@+id/ivFb"
                android:scaleType="centerCrop"
                android:src="@drawable/google_btn" />
        </RelativeLayout>


        <TextView 
        android:fontFamily="@font/aceh"
            android:id="@+id/btnGetStarted"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="80dp"
            android:layout_marginRight="30dp"
            android:background="@drawable/round_bg"
            android:padding="@dimen/_8sdp"
            android:text="@string/get_started"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="@dimen/_14ssp"
            android:textStyle="bold" />

    </LinearLayout>
</ScrollView>