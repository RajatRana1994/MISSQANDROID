<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="@dimen/_4sdp"
    android:layout_marginTop="@dimen/_12sdp"
    android:layout_marginEnd="@dimen/_4sdp"
    android:background="@drawable/round_bg_less_more"
    android:backgroundTint="@color/yellow_skin"
    android:padding="@dimen/_6sdp">

    <TextView 
        android:fontFamily="@font/helvetica"
        android:id="@+id/tvCustomerAddress"
        android:layout_width="0dp"
        android:maxLines="2"
        android:paddingBottom="@dimen/_8sdp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginStart="@dimen/_1sdp"
        android:text="08 North Fillmore"
        android:textColor="@color/black"
        android:textSize="@dimen/_12ssp"
        android:textStyle="bold"
        app:layout_constraintEnd_toStartOf="@+id/tvCompleted"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView 
        android:fontFamily="@font/helvetica"
        android:id="@+id/tvCustomerLocation"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginTop="@dimen/_4sdp"
        android:layout_marginEnd="@dimen/_44sdp"
        android:drawableStart="@drawable/ic_location_on"
        android:drawablePadding="@dimen/_7sdp"
        android:text="Sacris Road, Mandaue City"
        android:textColor="@color/black"
        android:textSize="@dimen/_10ssp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvCustomerAddress" />

    <TextView
        android:id="@+id/tvTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginEnd="@dimen/_4sdp"
        android:fontFamily="@font/helvetica"
        android:gravity="end"
        android:text="6:45 PM\n\n2:00 PM"
        android:textColor="@color/black"
        android:textSize="@dimen/_9ssp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/tvCustomerLocation" />

    <TextView 
        android:fontFamily="@font/helvetica"
        android:id="@+id/tvCustomerSitepoint"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginStart="@dimen/_1sdp"
        android:layout_marginEnd="@dimen/_44sdp"
        android:drawableStart="@drawable/ic_sitepoint"
        android:drawablePadding="@dimen/_5sdp"
        android:text="Banilad Road, Cebu City"
        android:textColor="@color/black"
        android:textSize="@dimen/_10ssp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvCustomerLocation" />

    <TextView 
        android:fontFamily="@font/helvetica"
        android:id="@+id/tvCompleted"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:background="@drawable/round_bg"
        android:backgroundTint="@color/orange"
        android:paddingHorizontal="@dimen/_12sdp"
        android:paddingVertical="@dimen/_5sdp"
        android:layout_marginEnd="@dimen/_5sdp"
        app:layout_goneMarginEnd="0dp"
        android:text="@string/completed"
        android:textColor="@color/white"
        android:textSize="@dimen/_10ssp"
        app:layout_constraintEnd_toStartOf="@+id/tvReject"
        app:layout_constraintTop_toTopOf="@+id/tvCustomerAddress" />
    <TextView 
        android:fontFamily="@font/helvetica"
        android:id="@+id/tvReject"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginEnd="@dimen/_5sdp"
        android:paddingVertical="@dimen/_5sdp"
        android:visibility="gone"
        android:paddingHorizontal="@dimen/_12sdp"
        android:background="@drawable/round_bg"
        android:backgroundTint="@color/ios_red"
        android:text="Reject"
        android:textColor="@color/white"
        android:textSize="@dimen/_10ssp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/tvCustomerAddress" />

</androidx.constraintlayout.widget.ConstraintLayout>